<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/putih"
    android:gravity="center"
    android:padding="15dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_main_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/background_utama"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/tampilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_main_profile"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nama_anak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/icon_arrow"
            android:maxLength="30"
            android:textColor="@color/biruToolbar"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Rizkia Febri Hardiansyah"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <TextView
        android:id="@+id/nama_sekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_main_profile"
        android:layout_below="@id/tampilan"
        android:textSize="20dp"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:maxLength="30"
        android:text="SMAN 1 BOGOR" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>