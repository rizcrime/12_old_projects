<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/etRptId" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hardwareAccelerated="true" app:cardBackgroundColor="@color/white">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <RelativeLayout android:orientation="horizontal" android:background="@color/colorAccent" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textColor="@android:color/white" android:layout_gravity="left" android:id="@+id/urut" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="#NO URUT"/>
                            <TextView android:textStyle="bold" android:textColor="@android:color/black" android:gravity="right" android:id="@+id/tvNoUrut" android:background="@drawable/rounded_tag" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="13dp" android:minWidth="40dp" android:maxLines="1" android:layout_alignBaseline="@+id/string_id" android:layout_alignBottom="@+id/string_id" android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hardwareAccelerated="true" app:cardBackgroundColor="@color/white">
                    <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:text="RENCANA"
                            android:textStyle="bold" />
                        <View android:background="@color/grey_light" android:layout_width="match_parent" android:layout_height="2dp"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5">
                                <EditText android:id="@+id/etRencanaTgl" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_tanggal" android:inputType="date"/>
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton android:id="@+id/btnRencanaTgl" android:background="@drawable/btn_background" android:padding="7dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_calendar" android:layout_weight="1"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5">
                                <EditText android:id="@+id/etRencanaPukul" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_pukul" android:inputType="time"/>
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton android:id="@+id/btnRencanaPukul" android:background="@drawable/btn_background" android:padding="7dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_time" android:layout_weight="1"/>
                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etRencanaFlight" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_flight" android:inputType="text" android:textAllCaps="true"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etRencanaJumlah" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_jumlah" android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etRencanaBandara" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_bandara" android:inputType="text"/>
                        </android.support.design.widget.TextInputLayout>
                      </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hardwareAccelerated="true" app:cardBackgroundColor="@color/white">
                    <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textStyle="bold" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="AKTUAL"/>
                        <View android:background="@color/grey_light" android:layout_width="match_parent" android:layout_height="2dp"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5">
                                <EditText android:id="@+id/etAktualTgl" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_tanggal" android:inputType="time"/>
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton android:id="@+id/btnAktualTgl" android:background="@drawable/btn_background" android:padding="7dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_calendar" android:layout_weight="1"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="5">
                                <EditText android:id="@+id/etAktualPukul" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_pukul" android:inputType="time"/>
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton android:id="@+id/btnAktualPukul" android:background="@drawable/btn_background" android:padding="7dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_time" android:layout_weight="1"/>
                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etAktualFlight" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_flight" android:inputType="text" android:textAllCaps="true"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etAktualJumlah" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_jumlah" android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:id="@+id/etAktualBandara" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_bandara_transit" android:inputType="text"/>
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <EditText android:id="@+id/etPria" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_pria" android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <EditText android:id="@+id/etWanita" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_wanita" android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <EditText android:id="@+id/etSakit" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_sakit" android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                <EditText android:id="@+id/etLain" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/rpt_lain_lain" android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btnUpdate" android:background="@color/colorTblPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="UPDATE"/>
                <Button android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" android:gravity="center" android:id="@+id/btnDelete" android:background="@color/colorTblLight" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="DELETE"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
