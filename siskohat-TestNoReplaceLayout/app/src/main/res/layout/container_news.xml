<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:id="@+id/tvId" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvNewsDetail" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" android:textColor="@color/colorPrimary" android:gravity="center" android:id="@+id/tvTitles" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cek Keberangkatan"/>
    <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardCornerRadius="3dp" app:cardElevation="0.01dp">
        <RelativeLayout android:id="@+id/top_layout" android:layout_width="match_parent" android:layout_height="300dp">
            <ImageView android:id="@+id/ivImage" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginBottom="50dp" android:src="@drawable/kaabah" android:scaleType="fitXY"/>
            <TextView android:textStyle="bold" android:textColor="#fff" android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@+id/tvSubTitles" android:background="#5c1b1b1b" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:layout_height="50dp" android:text="Test" android:layout_alignBottom="@+id/ivImage" android:layout_alignParentLeft="true" android:alpha="0.8"/>
            <TextView android:textColor="@android:color/black" android:id="@+id/tvDesc" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="5dp" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lorem ipsum dolor sit amet, augue ponderum eum ei, ne eum appetere verterem necessitatibus. Cu oratio voluptua consequat sea, iusto libris suavitate sed ne." android:layout_below="@+id/tvSubTitles" android:layout_alignParentLeft="true" android:alpha="0.8"/>
            <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/tvReadMore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Read More ..." android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
