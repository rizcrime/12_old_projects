<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar1" android:layout_width="match_parent" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge"/>
    <android.support.v4.widget.NestedScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText android:id="@+id/etUserId" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/user_id"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText android:id="@+id/etName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Nama"/>
            </android.support.design.widget.TextInputLayout>
            <TextView android:textSize="18sp" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Status"/>
            <RadioGroup android:orientation="horizontal" android:id="@+id/rgStatus" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rbStatusAktif" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Aktif" android:layout_weight="1"/>
                <RadioButton android:id="@+id/rbStatusTidakAktif" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tidak Aktif" android:layout_weight="1"/>
            </RadioGroup>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText android:id="@+id/etEmail" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/email"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText android:id="@+id/etPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Password" android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:paddingLeft="5dp" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="User Type"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/rgUserType" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbUserType" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Member"/>
                </RadioGroup>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText android:id="@+id/etKodePihk" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Kode PIHK" android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <Button android:textColor="@color/white" android:id="@+id/btn_insertdata" android:background="@drawable/round_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/btn_simpan"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <Button android:textColor="@color/white" android:id="@+id/btnhapus" android:background="@drawable/round_btn" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Hapus" android:layout_weight="1"/>
                <Button android:textColor="@color/white" android:id="@+id/btnUpdate" android:background="@drawable/round_btn" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/btn_simpan" android:layout_weight="2"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
