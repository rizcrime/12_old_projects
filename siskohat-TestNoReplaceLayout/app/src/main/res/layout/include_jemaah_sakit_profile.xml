<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground" android:hardwareAccelerated="true" app:cardBackgroundColor="@color/white">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="PROFILE PIHK"/>
        <View android:background="@color/grey_light" android:layout_width="match_parent" android:layout_height="2dp"/>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_passport"/>
            <TextView android:textSize="20dp" android:id="@+id/textView3" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No.Passport"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_userdata"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_titles" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nama Jemaah"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_number"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_usia" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Usia"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_calendar"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_des_nature" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tanggal"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_hospital"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_rsbphi" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RS/BPHI"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_info"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_sebab" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sebab"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_info"/>
            <TextView android:textSize="20dp" android:id="@+id/tv_keterangan" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Keterangan"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
