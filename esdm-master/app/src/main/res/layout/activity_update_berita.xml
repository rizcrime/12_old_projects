<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UpdateBerita.UpdateBeritaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/white_basic_black_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/shape_orange"
                android:paddingHorizontal="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Hot News"/>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
            <Button
                android:id="@+id/goNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_black"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"
                android:textColorLink="@color/white"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/selengkapnya"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Judul Berita sesesesesesesesesesesesgfgfgfgfg dfdfdfdfdfdfsdsdsasasasasasasasasas saasasasasasasasas ..."
                android:textColor="@color/black"
                android:autoLink="web"
                android:maxLines="1"
                android:textSize="18sp"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/negative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Negative"
                android:background="@drawable/shape_orange2"/>
            <Button
                android:id="@+id/netral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="Netral"
                android:background="@drawable/shape_orange2"/>
            <Button
                android:id="@+id/positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:text="Positive"
                android:background="@drawable/shape_orange2"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/daftar_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/shape_orange2"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/daftar_berita2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/shape_orange2"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/daftar_berita3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/shape_orange2"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</ScrollView>